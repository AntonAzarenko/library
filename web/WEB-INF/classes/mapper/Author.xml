<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="library.dao.AuthorDao">

    <resultMap type="Author" id="authormap">
        <id column="author_id" property="id"/>
        <result column="author_name" property="name"/>
        <association property="book" javaType="Book">
            <id column="book_id" property="id" />
            <result column="book_title" property="firstname"/>
        </association>
    </resultMap>

    <resultMap id="author" type="Author">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <select id="read" resultMap="author" parameterType="Long">
        SELECT * FROM authors WHERE id = #{id}
    </select>

    <select id="find" resultMap="authormap">
        SELECT
            b.id AS book_id,
            b.title AS book_title,
            a.id AS author_id,
            a.name AS author_name
        FROM books b
        JOIN authors a ON a.id = b.author_id
    </select>
    
    <insert id="insert"
            parameterType="Author"
            useGeneratedKeys="true">
        INSERT INTO authors (name) VALUES (#{name})
    </insert>

    <update id="update"
            parameterType="Author">
        UPDATE INTO authors name=#{name} WHERE id = #{id}
    </update>

    <delete id="delete"
            parameterType="Long">
        delete from authors where id = #{id}
    </delete>

    <select id="findAll" resultMap="author">
        SELECT * FROM authors a
    </select>

    <select id="findByName"
            resultMap="author"
            parameterType="String">
        SELECT * FROM authors WHERE name LIKE (#{name})
    </select>
</mapper>