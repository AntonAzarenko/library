<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="library.dao.AuthorDao">

    <resultMap id="authorMap" type="Author">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <select id="read" resultType="Author" parameterType="Long">
        SELECT a.id, a.name FROM authors a WHERE id = #{id}
    </select>

    <insert id="insert"
            parameterType="Author"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO authors (name) VALUES (#{name})
    </insert>

    <update id="update"
            parameterType="Author">
        UPDATE authors SET name = #{name} WHERE id = #{id}
    </update>

    <delete id="delete"
            parameterType="Long">
        delete from authors where id = #{id}
    </delete>

    <select id="findAll" resultMap="authorMap">
        SELECT a.id, a.name FROM authors a
    </select>

    <select id="findByName"
            resultMap="authorMap"
            parameterType="String">
        SELECT a.id, a.name FROM authors a WHERE name LIKE (#{name})
    </select>
</mapper>